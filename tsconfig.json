{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "types": ["chrome"],
    "outDir": "./build/",
    "baseUrl": "./src/js",
    "paths": {
      "*": ["*"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true
  }
}
