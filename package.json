{
  "name": "tab-manager-v2",
  "version": "0.17.1",
  "description": "Quickly and conveniently manage your open tabs",
  "scripts": {
    "analyze": "NODE_ENV=production node utils/analyze.js",
    "jest": "jest",
    "build": "node utils/build.js",
    "codecov": "codecov",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "deploy": "NODE_ENV=production yarn build && yarn zip",
    "release": "standard-version",
    "precommit": "lint-staged",
    "zip": "zip -X --compression-method deflate -r build.zip build/*",
    "lint": "standard",
    "prettier": "prettier --no-semi --single-quote --write",
    "lintfix": "yarn prettier 'src/**/*.js' && yarn lint --fix",
    "start": "node utils/webserver.js",
    "test": "yarn lint && yarn jest",
    "test-watch": "yarn jest --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o .out"
  },
  "dependencies": {
    "@material-ui/core": "^3.0.3",
    "@material-ui/icons": "^3.0.1",
    "chrome-extension-async": "^3.3.0",
    "fuzzy": "^0.1.3",
    "lodash.merge": "^4.6.1",
    "mobx": "^5.1.1",
    "mobx-react": "^5.2.8",
    "mousetrap": "^1.6.2",
    "react": "^16.5.1",
    "react-custom-scrollbars": "^4.2.1",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^5.0.1",
    "react-dom": "^16.5.1",
    "react-flip-move": "^3.0.1",
    "react-resize-detector": "^3.1.2",
    "rebound": "^0.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "7.0.0",
    "@babel/plugin-proposal-function-sent": "7.0.0",
    "@babel/plugin-proposal-json-strings": "7.0.0",
    "@babel/plugin-proposal-numeric-separator": "7.0.0",
    "@babel/plugin-proposal-throw-expressions": "7.0.0",
    "@babel/plugin-syntax-dynamic-import": "7.0.0",
    "@babel/plugin-syntax-import-meta": "7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "8.2.6",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^0.1.19",
    "codecov": "^3.1.0",
    "copy-webpack-plugin": "^4.5.2",
    "coveralls": "^3.0.2",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "file-loader": "^2.0.0",
    "fs-extra": "^7.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "prettier": "1.14.2",
    "regenerator-runtime": "^0.12.1",
    "sinon": "^6.3.3",
    "sinon-chrome": "^2.3.1",
    "standard": "^12.0.1",
    "standard-version": "^4.4.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.19.0",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-dev-server": "^3.1.8",
    "write-file-webpack-plugin": "^4.4.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "chrome",
      "screen"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "standard --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "yarn prettier",
      "git add"
    ]
  },
  "jest": {
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "coverageDirectory": "./coverage/"
  }
}
