{
  "name": "tab-manager-v2",
  "version": "0.19.0",
  "description": "Quickly and conveniently manage your open tabs",
  "scripts": {
    "analyze": "NODE_ENV=production node utils/analyze.js",
    "jest": "jest",
    "build": "NODE_ENV=production node utils/build.js",
    "codecov": "codecov",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "deploy": "yarn build && yarn zip",
    "release": "standard-version",
    "upload": "node -r dotenv/config ./node_modules/.bin/webstore upload --source build.zip",
    "publish-extension": "node -r dotenv/config ./node_modules/.bin/webstore publish",
    "zip": "zip -X --compression-method deflate -r --junk-paths build.zip build/*",
    "lint:ts": "standard --parser typescript-eslint-parser --plugin typescript ./**/*.tsx",
    "lint": "standard",
    "prettier": "prettier --no-semi --single-quote --write",
    "lintfix": "yarn prettier 'src/**/*.{js,ts,tsx}' && yarn lint --fix && yarn lint:ts --fix",
    "start": "node utils/webserver.js",
    "test": "yarn lint && yarn lint:ts && yarn jest",
    "test-watch": "yarn jest --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o .out"
  },
  "dependencies": {
    "@material-ui/core": "3.9.3",
    "@material-ui/icons": "^3.0.2",
    "fuzzy": "^0.1.3",
    "lodash.merge": "^4.6.1",
    "mobx": "^5.9.4",
    "mobx-react": "^5.4.3",
    "mousetrap": "^1.6.3",
    "react": "^16.8.6",
    "react-custom-scrollbars": "^4.2.1",
    "react-dnd": "^7.4.5",
    "react-dnd-html5-backend": "^7.4.4",
    "react-dom": "^16.8.6",
    "react-flip-move": "^3.0.3",
    "react-resize-detector": "^4.1.3",
    "rebound": "^0.1.0",
    "webextension-polyfill": "^0.4.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.83",
    "@types/jasmine": "^3.3.12",
    "@types/jest": "^24.0.12",
    "@types/react": "^16.8.15",
    "@types/react-custom-scrollbars": "^4.0.5",
    "@types/react-dnd": "^3.0.2",
    "@types/react-dnd-html5-backend": "^3.0.2",
    "@types/react-dom": "^16.8.4",
    "@types/react-flip-move": "^2.9.12",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-eslint": "^10.0.1",
    "chrome-webstore-upload-cli": "^1.2.0",
    "clean-webpack-plugin": "^2.0.1",
    "codecov": "^3.3.0",
    "copy-webpack-plugin": "^5.0.3",
    "coveralls": "^3.0.3",
    "css-loader": "^2.1.1",
    "dotenv": "^7.0.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "eslint": "^5.16.0",
    "eslint-plugin-typescript": "^0.14.0",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.2.0",
    "fs-extra": "^7.0.1",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "mini-css-extract-plugin": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "1.17.0",
    "progress-bar-webpack-plugin": "^1.12.1",
    "regenerator-runtime": "^0.13.2",
    "samsam": "^1.3.0",
    "sinon": "^7.3.2",
    "sinon-chrome": "^3.0.1",
    "speed-measure-webpack-plugin": "^1.3.1",
    "standard": "^12.0.1",
    "standard-version": "^5.0.2",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.4.4",
    "typescript": "^3.4.5",
    "typescript-eslint-parser": "^22.0.0",
    "webpack": "^4.30.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "write-file-webpack-plugin": "^4.5.0"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "parser": "babel-eslint",
    "globals": [
      "screen"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "standard --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn prettier",
      "standard --parser typescript-eslint-parser --plugin typescript --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "yarn prettier",
      "git add"
    ]
  },
  "jest": {
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "coverageDirectory": "./coverage/"
  }
}
