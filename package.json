{
  "name": "tab-manager-v2",
  "version": "0.13.1",
  "description": "Quickly and conveniently manage your open tabs",
  "scripts": {
    "analyze": "NODE_ENV=production node utils/analyze.js",
    "jest": "jest",
    "build": "node utils/build.js",
    "codecov": "codecov",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "deploy": "NODE_ENV=production yarn build && yarn zip",
    "release": "standard-version",
    "precommit": "lint-staged",
    "zip": "zip -X --compression-method deflate -r build.zip build/*",
    "lint": "standard",
    "prettier": "prettier --no-semi --single-quote --write",
    "lintfix": "yarn prettier src/**/*.js && yarn lint --fix",
    "start": "node utils/webserver.js",
    "test": "yarn lint && yarn jest",
    "test-watch": "yarn jest --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o .out"
  },
  "dependencies": {
    "@material-ui/core": "^1.1.0",
    "@material-ui/icons": "^1.1.0",
    "chrome-extension-async": "^3.2.4",
    "fuzzy": "^0.1.3",
    "mobx": "^4.3.0",
    "mobx-react": "^5.1.2",
    "mousetrap": "^1.6.1",
    "react": "^16.4.0",
    "react-custom-scrollbars": "^4.2.1",
    "react-dnd": "^2.5.4",
    "react-dnd-html5-backend": "^2.5.4",
    "react-dom": "^16.4.0",
    "react-flip-move": "^3.0.1",
    "react-resize-detector": "^2.3.0",
    "rebound": "^0.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.49",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/preset-react": "^7.0.0-beta.49",
    "@babel/preset-stage-2": "^7.0.0-beta.49",
    "babel-eslint": "8.2.3",
    "babel-jest": "^23.0.0",
    "babel-loader": "^8.0.0-beta",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^0.1.19",
    "codecov": "^3.0.2",
    "copy-webpack-plugin": "^4.5.1",
    "coveralls": "^3.0.1",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "file-loader": "^1.1.11",
    "fs-extra": "^6.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^23.0.0",
    "lint-staged": "^7.1.2",
    "prettier": "1.12.1",
    "regenerator-runtime": "^0.11.1",
    "sinon": "^5.0.10",
    "sinon-chrome": "^2.3.1",
    "standard": "^11.0.1",
    "standard-version": "^4.4.0",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "webpack": "^4.9.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-dev-server": "^3.1.4",
    "write-file-webpack-plugin": "^4.2.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": ["chrome", "screen"]
  },
  "lint-staged": {
    "*.js": ["yarn prettier", "standard --fix", "git add"],
    "*.{json,css,md}": ["yarn prettier", "git add"]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage/"
  }
}
