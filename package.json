{
  "name": "tab-manager-v2",
  "version": "1.13.3",
  "description": "Quickly and conveniently manage your open tabs",
  "private": true,
  "workspaces": [
    "integration_test"
  ],
  "scripts": {
    "analyze": "NODE_ENV=production node utils/analyze.js",
    "build": "concurrently yarn:build:*",
    "_build": "node utils/build.js",
    "build:chrome": "yarn _build",
    "build:firefox": "TARGET_BROWSER=firefox yarn _build",
    "start": "concurrently yarn:start:*",
    "_start": "node utils/webserver.js",
    "start:chrome": "yarn _start",
    "start:firefox": "TARGET_BROWSER=firefox PORT=3001 yarn _start",
    "codecov": "codecov",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "deploy": "NODE_ENV=production yarn build && yarn zip && ls -lh build*.zip",
    "release": "standard-version",
    "upload:chrome": "node -r dotenv/config ./node_modules/.bin/webstore upload --source build_chrome.zip",
    "publish:chrome": "node -r dotenv/config ./node_modules/.bin/webstore publish",
    "publish:firefox": "web-ext sign --source-dir build_firefox --channel=listed || echo 'Publish to Mozilla Add-ons may failed because https://github.com/mozilla/web-ext/issues/804'",
    "publish-extension": "yarn publish:chrome && yarn publish:firefox",
    "zip": "concurrently -m 1 yarn:zip:*",
    "_zip": "zip -X --compression-method deflate -9 -r --junk-paths",
    "zip:chrome": "yarn _zip build_chrome.zip build_chrome/*",
    "zip:firefox": "yarn _zip build_firefox.zip build_firefox/*",
    "lint:ts": "standard --parser typescript-eslint-parser --plugin typescript ./**/*.tsx",
    "lint": "standard",
    "prettier": "prettier --no-semi --single-quote --write",
    "lintfix": "yarn prettier 'src/**/*.{js,ts,tsx}' && yarn lint --fix && yarn lint:ts --fix",
    "jest": "jest --maxWorkers=1",
    "test": "yarn lint && yarn lint:ts && yarn jest",
    "test-watch": "yarn jest --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o .out"
  },
  "dependencies": {
    "@material-ui/core": "4.11.0",
    "@material-ui/icons": "4.9.1",
    "@material-ui/lab": "4.0.0-alpha.56",
    "autosuggest-highlight": "3.1.1",
    "classnames": "2.2.6",
    "fuzzy": "0.1.3",
    "lodash.debounce": "4.0.8",
    "lodash.merge": "4.6.2",
    "loglevel": "1.6.8",
    "match-sorter": "4.2.0",
    "mobx": "5.15.5",
    "mobx-react-lite": "2.0.7",
    "mousetrap": "1.6.5",
    "react": "16.13.1",
    "react-command-palette": "0.13.0-0",
    "react-dnd": "11.1.3",
    "react-dnd-html5-backend": "11.1.3",
    "react-dom": "16.13.1",
    "react-resize-detector": "5.0.7",
    "react-window": "1.8.5",
    "rebound": "0.1.0",
    "tailwindcss": "1.6.2",
    "use-system-theme": "0.0.4",
    "webextension-polyfill": "0.6.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "10.4.8",
    "@types/chrome": "0.0.122",
    "@types/jest": "26.0.10",
    "@types/react": "16.9.46",
    "@types/react-custom-scrollbars": "4.0.7",
    "@types/react-dom": "16.9.8",
    "@types/webpack-env": "1.15.2",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "babel-eslint": "10.1.0",
    "chrome-webstore-upload-cli": "1.2.0",
    "clean-webpack-plugin": "3.0.0",
    "codecov": "3.7.2",
    "concurrently": "5.3.0",
    "copy-webpack-plugin": "6.0.3",
    "coveralls": "3.1.0",
    "css-loader": "4.2.1",
    "dotenv": "8.2.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.3",
    "eslint-plugin-typescript": "0.14.0",
    "file-loader": "6.0.0",
    "fork-ts-checker-webpack-plugin": "5.0.14",
    "glob-all": "3.2.1",
    "hard-source-webpack-plugin": "0.13.1",
    "html-loader": "1.1.0",
    "html-webpack-plugin": "4.3.0",
    "husky": "4.2.5",
    "jest": "26.4.0",
    "lint-staged": "10.2.11",
    "mini-css-extract-plugin": "0.10.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss-loader": "3.0.0",
    "prettier": "2.0.5",
    "progress-bar-webpack-plugin": "2.1.0",
    "purgecss-webpack-plugin": "2.3.0",
    "react-axe": "3.5.3",
    "react-test-renderer": "16.13.1",
    "regenerator-runtime": "0.13.7",
    "samsam": "1.3.0",
    "sinon": "9.0.3",
    "sinon-chrome": "3.0.1",
    "speed-measure-webpack-plugin": "1.3.3",
    "standard": "14.3.4",
    "standard-version": "9.0.0",
    "style-loader": "1.2.1",
    "terser-webpack-plugin": "4.1.0",
    "ts-jest": "26.2.0",
    "ts-loader": "8.0.2",
    "typescript": "3.9.7",
    "typescript-eslint-parser": "22.0.0",
    "web-ext": "5.0.0",
    "webpack": "4.44.1",
    "webpack-bundle-analyzer": "3.8.0",
    "webpack-dev-server": "3.11.0",
    "write-file-webpack-plugin": "4.5.1"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "parser": "babel-eslint",
    "globals": [
      "screen",
      "HTMLElement",
      "HTMLInputElement",
      "HTMLDivElement",
      "page",
      "browser"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "standard --fix"
    ],
    "*.{ts,tsx}": [
      "yarn prettier",
      "standard --parser typescript-eslint-parser --plugin typescript --fix"
    ],
    "*.{json,css,md}": [
      "yarn prettier"
    ]
  }
}
