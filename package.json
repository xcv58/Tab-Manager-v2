{
  "name": "tab-manager-v2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace tab-manager-v2 start",
    "release": "yarn workspace tab-manager-v2 release",
    "test": "yarn lint && yarn lint:ts && yarn workspace tab-manager-v2 jest",
    "build": "yarn workspace tab-manager-v2 build",
    "deploy": "NODE_ENV=production yarn workspace tab-manager-v2 build && yarn zip && ls -lh build*.zip",
    "upload:chrome": "node -r dotenv/config ./node_modules/.bin/webstore upload --source build_chrome.zip",
    "publish:chrome": "node -r dotenv/config ./node_modules/.bin/webstore publish",
    "publish:firefox": "web-ext sign --source-dir build_firefox --channel=listed || echo 'Publish to Mozilla Add-ons may failed because https://github.com/mozilla/web-ext/issues/804'",
    "publish-extension": "yarn publish:chrome && yarn publish:firefox",
    "zip": "concurrently -m 1 yarn:zip:*",
    "_zip": "zip -X --compression-method deflate -9 -r --junk-paths",
    "zip:chrome": "yarn _zip build_chrome.zip build_chrome/*",
    "zip:firefox": "yarn _zip build_firefox.zip build_firefox/*",
    "lint:ts": "standard --parser typescript-eslint-parser --plugin typescript ./**/*.tsx",
    "lint": "standard",
    "prettier": "prettier --no-semi --single-quote --write",
    "lintfix": "yarn prettier '**/*.{js,ts,tsx}' && yarn lint --fix && yarn lint:ts --fix"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "1.2.0",
    "concurrently": "5.3.0",
    "coveralls": "3.1.0",
    "dotenv": "8.2.0",
    "eslint-plugin-typescript": "0.14.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.0",
    "prettier": "2.1.2",
    "standard": "14.3.4",
    "typescript": "4.0.5",
    "typescript-eslint-parser": "22.0.0",
    "web-ext": "5.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "parser": "babel-eslint",
    "globals": [
      "screen",
      "Event",
      "HTMLElement",
      "HTMLInputElement",
      "HTMLDivElement",
      "page",
      "browser"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "standard --fix"
    ],
    "*.{ts,tsx}": [
      "yarn prettier",
      "standard --parser typescript-eslint-parser --plugin typescript --fix"
    ],
    "*.{json,css,md}": [
      "yarn prettier"
    ]
  }
}
