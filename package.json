{
  "name": "tab-manager-v2",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "start": "yarn workspace tab-manager-v2 start",
    "release": "yarn workspace tab-manager-v2 release",
    "release-it": "release-it --ci",
    "test": "turbo run test",
    "test:lint": "yarn lint",
    "test:chrome-upload": "chrome-webstore-upload --help",
    "test:firefox-upload": "web-ext --help",
    "build": "turbo run build",
    "deploy": "turbo run zip ls stat",
    "upload:chrome": "node -r dotenv/config ./node_modules/.bin/chrome-webstore-upload upload --source packages/extension/build/build_chrome.zip",
    "publish:chrome": "node -r dotenv/config ./node_modules/.bin/chrome-webstore-upload publish",
    "publish:firefox": "web-ext sign --source-dir packages/extension/build/build_firefox --channel=listed || echo 'Publish to Mozilla Add-ons may failed because https://github.com/mozilla/web-ext/issues/804'",
    "publish-extension": "run-s publish:chrome publish:firefox",
    "zip": "yarn workspace tab-manager-v2 zip",
    "stat": "yarn workspace tab-manager-v2 stat",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --no-semi --single-quote --write",
    "lintfix": "yarn prettier '**/*.{js,ts,tsx,yml}' && yarn lint --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "chrome-webstore-upload-cli": "2.1.0",
    "coveralls": "3.1.1",
    "dotenv": "16.0.1",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.4.5",
    "eslint-plugin-typescript": "0.14.0",
    "husky": "8.0.1",
    "lint-staged": "12.4.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "release-it": "15.0.0",
    "turbo": "1.2.14",
    "typescript": "4.7.2",
    "web-ext": "6.8.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn prettier",
      "eslint --fix"
    ],
    "*.{json,css,md,yaml,yml,md,mdx,html}": [
      "yarn prettier"
    ]
  }
}
