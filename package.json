{
  "name": "tab-manager-v2",
  "version": "0.21.7",
  "description": "Quickly and conveniently manage your open tabs",
  "scripts": {
    "analyze": "NODE_ENV=production node utils/analyze.js",
    "jest": "jest",
    "build": "NODE_ENV=production node utils/build.js",
    "codecov": "codecov",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "deploy": "yarn build && yarn zip && ls -lh build.zip",
    "release": "standard-version",
    "upload:chrome": "node -r dotenv/config ./node_modules/.bin/webstore upload --source build.zip",
    "publish:chrome": "node -r dotenv/config ./node_modules/.bin/webstore publish",
    "publish:firefox": "web-ext sign --source-dir build --channel=listed || echo 'Publish to Mozilla Add-ons may failed because https://github.com/mozilla/web-ext/issues/804'",
    "publish-extension": "yarn publish:chrome && yarn publish:firefox",
    "zip": "zip -X --compression-method deflate -r --junk-paths build.zip build/*",
    "lint:ts": "standard --parser typescript-eslint-parser --plugin typescript ./**/*.tsx",
    "lint": "standard",
    "prettier": "prettier --no-semi --single-quote --write",
    "lintfix": "yarn prettier 'src/**/*.{js,ts,tsx}' && yarn lint --fix && yarn lint:ts --fix",
    "start": "node utils/webserver.js",
    "test": "yarn lint && yarn lint:ts && yarn jest",
    "test-watch": "yarn jest --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o .out"
  },
  "dependencies": {
    "@material-ui/core": "4.3.2",
    "@material-ui/icons": "^4.2.1",
    "classnames": "^2.2.6",
    "fuzzy": "^0.1.3",
    "lodash.merge": "^4.6.2",
    "mobx": "^5.13.0",
    "mobx-react": "^6.1.3",
    "mousetrap": "^1.6.3",
    "react": "^16.9.0",
    "react-command-palette": "^0.3.0-0",
    "react-custom-scrollbars": "^4.2.1",
    "react-dnd": "9.3.4",
    "react-dnd-html5-backend": "^9.3.4",
    "react-dom": "^16.9.0",
    "react-flip-move": "^3.0.3",
    "react-resize-detector": "^4.2.0",
    "rebound": "^0.1.0",
    "webextension-polyfill": "^0.4.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.88",
    "@types/jasmine": "^3.4.0",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.9.1",
    "@types/react-custom-scrollbars": "^4.0.6",
    "@types/react-dnd": "^3.0.2",
    "@types/react-dnd-html5-backend": "^3.0.2",
    "@types/react-dom": "^16.8.5",
    "@types/react-flip-move": "^2.9.12",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-eslint": "^10.0.2",
    "chrome-webstore-upload-cli": "^1.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "codecov": "^3.5.0",
    "copy-webpack-plugin": "^5.0.4",
    "coveralls": "^3.0.6",
    "css-loader": "^3.2.0",
    "dotenv": "^8.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.1.0",
    "eslint-plugin-typescript": "^0.14.0",
    "file-loader": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "prettier": "1.18.2",
    "progress-bar-webpack-plugin": "^1.12.1",
    "react-axe": "^3.2.0",
    "react-test-renderer": "^16.9.0",
    "regenerator-runtime": "^0.13.3",
    "samsam": "^1.3.0",
    "sinon": "^7.4.1",
    "sinon-chrome": "^3.0.1",
    "speed-measure-webpack-plugin": "^1.3.1",
    "standard": "^13.1.0",
    "standard-version": "^7.0.0",
    "style-loader": "^1.0.0",
    "terser-webpack-plugin": "^1.4.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "6.0.4",
    "typescript": "^3.5.3",
    "typescript-eslint-parser": "^22.0.0",
    "web-ext": "^3.1.1",
    "webpack": "4.39.2",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-dev-server": "^3.8.0",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "resolutions": {
    "react-test-renderer": "^16.8.6"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "parser": "babel-eslint",
    "globals": [
      "screen",
      "HTMLInputElement"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "standard --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn prettier",
      "standard --parser typescript-eslint-parser --plugin typescript --fix",
      "git add"
    ],
    "*.{json,css,md}": [
      "yarn prettier",
      "git add"
    ]
  },
  "jest": {
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "coverageDirectory": "./coverage/"
  }
}
