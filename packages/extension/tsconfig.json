{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "types": ["jasmine", "jest"],
    "outDir": "./build/",
    "baseUrl": "./src/js",
    "paths": {
      "*": ["*"],
      "@material-ui/core": ["./material-ui/src"],
      "@material-ui/core/*": ["./material-ui/src/*"],
      "@material-ui/lab": ["./material-ui-lab/src"],
      "@material-ui/lab/*": ["./material-ui-lab/src/*"]
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
