{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "types": ["jasmine", "jest", "@testing-library/jest-dom"],
    "outDir": "./build/",
    "baseUrl": "./src/js",
    "paths": {
      "*": ["*"]
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
